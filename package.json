{
  "name": "base_bevr-stack",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "clean": "turbo run clean && git clean -xdf node_modules",
    "dev": "turbo run dev",
    "lint": "biome lint",
    "format": "biome check --write",
    "format:check": "biome check",
    "test": "turbo run test",
    "type-check": "turbo run type-check",
    "db:push": "turbo run push --filter=@repo/db",
    "ui:add": "turbo run ui:add --filter=@repo/ui --"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.2",
    "turbo": "^2.5.6",
    "typescript": "5.9.2",
    "ultracite": "5.2.14"
  },
  "engines": {
    "node": ">=22"
  },
  "packageManager": "bun@1.2.21",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "eslint": "^9.34.0",
      "effect": "3.17.14",
      "@effect/platform": "0.91.1",
      "@effect/rpc": "0.70.0",
      "@effect/language-service": "^0.40.1",
      "@effect-atom/atom-react": "^0.2.0",
      "@effect/platform-browser": "^0.71.0",
      "better-auth": "^1.3.18",
      "react": "^19.1.1",
      "react-dom": "^19.1.1",
      "clsx": "^2.1.1",
      "class-variance-authority": "^0.7.1",
      "lucide-react": "^0.542.0",
      "tailwindcss": "^4.1.12",
      "tailwind-merge": "^3.3.1",
      "@types/react": "^19.1.8",
      "@types/react-dom": "^19.1.8",
      "vite": "^6.0.11",
      "typescript": "5.9.2"
    }
  }
}
